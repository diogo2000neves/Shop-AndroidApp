<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a4c639"
    tools:context="com.example.diogo.minhaaplicacao.Registo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Registar"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="29dp"
        tools:text="Registar" />

    <EditText
        android:id="@+id/email"
        android:layout_width="325dp"
        android:layout_height="70dp"
        android:layout_above="@+id/buttonToRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:maxLength="30"
        android:fontFamily="Comic Sans"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="172dp" />


    <EditText
        android:id="@+id/nome"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/apelido"
        android:layout_alignBottom="@+id/apelido"
        android:layout_alignStart="@+id/email"
        android:background="@drawable/input_text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="92dp" />

    <EditText
        android:id="@+id/apelido"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/emailText"
        android:background="@drawable/input_text"
        android:ems="10"
        android:hint="Apelido"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingStart="20dp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/nome"
        android:layout_below="@+id/textView"
        android:layout_marginTop="41dp"
        android:text="Introduza o seu nome e apelido"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonToRegister"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_above="@+id/button13"
        android:layout_alignEnd="@+id/button13"
        android:layout_marginBottom="53dp"
        android:background="@drawable/mybutton"
        android:onClick="nextRegister"
        android:text="PrÃ³ximo"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/button15"
        android:src="@drawable/arrow" />

    <Button
        android:id="@+id/back1"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:alpha="0.0"
        android:onClick="ClickBack1"
        android:text="Button" />

    <Button
        android:id="@+id/button12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/apelido"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="4"
        android:textColor="#fff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/apelido"
        android:layout_alignTop="@+id/button12"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="3"
        android:textColor="#fff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignBottom="@+id/button13"
        android:layout_alignStart="@+id/buttonToRegister"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="2"
        android:textColor="#fff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/buttonToRegister"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="1"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginBottom="11dp"
        android:text="Introduza o seu email"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nomeText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/back1"
        android:layout_below="@+id/nome"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/trueRed" />

    <TextView
        android:id="@+id/apelidoText"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nomeText"
        android:layout_alignBottom="@+id/nomeText"
        android:layout_alignParentEnd="true"
        android:textColor="@color/trueRed" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonToRegister"
        android:layout_alignStart="@+id/button15"
        android:layout_marginBottom="23dp"
        android:textColor="@color/trueRed" />


</RelativeLayout>

