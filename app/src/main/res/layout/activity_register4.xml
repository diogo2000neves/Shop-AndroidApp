<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a4c639"
    tools:context="com.example.diogo.minhaaplicacao.Register4">

    <Button
        android:id="@+id/buttonToRegister4"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/mybutton"
        android:text="Concluir"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/textView12"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Registar"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="29dp"
        tools:text="Registar" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Morada da sua loja"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/endereco"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:background="@drawable/input_text"
        android:ems="10"
        android:hint="Endereço"
        android:inputType="textPostalAddress"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/cidade"
        android:layout_below="@+id/cidadeText"
        android:layout_marginTop="16dp"
        android:text="Caso tenha uma loja as encomendas feitas serão entregues nesta morada."
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="281dp" />

    <EditText
        android:id="@+id/cidade"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/endereco"
        android:layout_below="@+id/enderecoText"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:maxLength="50"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textPostalAddress"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/cidade"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="4"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/buttonToRegister4"
        android:layout_alignTop="@+id/button12"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="ClickVoltar3"
        android:text="3"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/buttonToRegister4"
        android:layout_alignTop="@+id/button13"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="ClickVoltar2"
        android:text="2"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/cidade"
        android:layout_alignTop="@+id/button14"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="ClickVoltar1"
        android:text="1"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button14"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="23dp"
        android:layout_toStartOf="@+id/imageView32"
        android:src="@drawable/barra" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView31"
        android:layout_toEndOf="@+id/button14"
        android:src="@drawable/barra" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView32"
        android:layout_toEndOf="@+id/textView10"
        android:src="@drawable/barra" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/imageView31"
        android:src="@drawable/arrow" />

    <Button
        android:id="@+id/back4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_alignEnd="@+id/button15"
        android:onClick="ClickBack4"
        android:alpha="0.0"
        android:text="Button" />

    <TextView
        android:id="@+id/enderecoText"
        android:layout_width="157dp"
        android:layout_height="22dp"
        android:layout_below="@+id/endereco"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imageView25"
        android:textColor="@color/trueRed" />

    <TextView
        android:id="@+id/cidadeText"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/enderecoText"
        android:layout_below="@+id/cidade"
        android:layout_marginTop="12dp"
        android:textColor="@color/trueRed" />

    <TextView
        android:id="@+id/textView79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_toEndOf="@+id/imageView32"
        android:text="(Opcional)"
        android:textColor="@color/white"
        android:textSize="19sp" />

</RelativeLayout>