<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a4c639"
    tools:context="com.example.diogo.minhaaplicacao.Registo2">

    <Button
        android:id="@+id/buttonToRegister2"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_below="@+id/error2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/mybutton"
        android:onClick="nextRegister2"
        android:text="PrÃ³ximo"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="63dp"
        android:text="Repita a palavra-passe"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="152dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Escolha uma palavra-passe"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="152dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="11dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Registar"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="29dp"
        tools:text="Registar" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:maxLength="20"
        android:maxLines="1"
        android:hint="Palavra-passe"
        android:paddingLeft="20dp"
        android:background="@drawable/input_text"
        android:inputType="textPassword"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="12dp"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Palavra-passe"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="4"
        android:textColor="#fff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/buttonToRegister2"
        android:layout_alignTop="@+id/button12"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="3"
        android:textColor="#fff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/buttonToRegister2"
        android:layout_alignTop="@+id/button13"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="2"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignTop="@+id/button14"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="ClickVoltar1"
        android:text="1"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button14"
        android:layout_alignEnd="@+id/button14"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/barra" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/button"
        android:src="@drawable/arrow" />

    <Button
        android:id="@+id/back2"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toStartOf="@+id/imageView28"
        android:onClick="ClickBack2"
        android:alpha="0.0"
        android:text="Button" />

    <TextView
        android:id="@+id/error"
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imageView23"
        android:textColor="@color/trueRed"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/error2"
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/error"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="16dp"
        android:textColor="@color/trueRed"
        android:textSize="16sp" />


</RelativeLayout>

